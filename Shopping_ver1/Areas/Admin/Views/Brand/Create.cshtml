@model BrandModel
@{
	ViewData["title"] = "Create Brand";
}
<h3>Create New Brand</h3>
<form asp-area="Admin" asp-controller="Brand" asp-action="Create" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label>Tên</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger" />
	</div>
	<div class="form-group">
		<label>Mô tả</label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger" />
	</div>
	<div class="form-group">
		<label>Trạng thái</label>
		<select asp-for="Status" class="form-control">
			<option value="1">Hiển thị</option>
			<option value="0">Ẩn</option>
		</select>
		<span asp-validation-for="Status" class="text-danger" />
	</div>
	<div class="form-group">
		<button class="btn btn-success">Tạo mới</button>
	</div>
	<input type="hidden" name="page" value="@ViewBag.Page" />
</form>
<a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
@* RenderPartial *@
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}