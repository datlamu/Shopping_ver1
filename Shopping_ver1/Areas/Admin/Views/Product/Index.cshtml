@model IEnumerable<ProductModel>
@{
	// Số thứ tự
	var index = 1;

	// Lấy phân trang, fallback nếu null
	var pager = ViewBag.Pager as Paginate ?? new Paginate();
}
<h3>List Product</h3>
<a asp-controller="Product" asp-action="Create">Create New Product</a>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col">Price</th>
			<th scope="col">Image</th>
			<th scope="col">Category</th>
			<th scope="col">Brand</th>
			<th scope="col">Manage</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@(index++)</th>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@item.Price</td>
				<td><img src="~/media/products/@item.Image" width="120" /></td>
				<td>@item.Category.Name</td>
				<td>@item.Brand.Name</td>
				<td>
					<a class="btn btn-warning btn-sm" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_Paging" model="@pager" />