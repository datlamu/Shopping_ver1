@model IEnumerable<ProductModel>
@{
	// Lấy phân trang, fallback nếu null
	var pager = ViewBag.Pager as Paginate ?? new Paginate();
	// Số thứ tự
	var index = pager.Skip + 1;
}
<h3>List Product</h3>
<a asp-controller="Product" asp-action="Create">Create New Product</a>
<table class="table" id="myTable">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col">Price</th>
			<th scope="col">Image</th>
			<th scope="col">Category</th>
			<th scope="col">Brand</th>
			<th scope="col">Manage</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@(index++)</th>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@FormatCurrency.ToVnCurrency(item.Price)</td>
				<td><img src="~/media/products/@item.Image" width="120" /></td>
				<td>@item.Category.Name</td>
				<td>@item.Brand.Name</td>
				<td>
					<a class="btn btn-warning btn-sm"
					   asp-controller="Product"
					   asp-action="Update"
					   asp-route-id="@item.Id"
					   asp-route-page="@pager.CurrentPage">
						Update
					</a>
					<button class="btn btn-danger btn-sm confirmDeletion delete-ajax" value="@item.Id">Delete</button>
				</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_Paging" model="@pager" />