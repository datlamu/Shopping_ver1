@model OrderDetailViewModel
@{
	ViewData["Title"] = "Chi tiết đơn hàng";
	var index = 1;
	var couponCode = Model.CouponCode != null ? "- " + Model.CouponCode : "";
}
<!-- Page Heading -->
<!-- DataTables Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3 d-flex justify-content-between align-items-center">
		<div>
			<h6 class="m-0 font-weight-bold text-primary mb-2">Chi tiết đơn hàng: @Model.OrderCode</h6>
			<h6 class="m-0 font-weight-bold text-primary">Địa chỉ giao hàng: @Model.ShippingRegion</h6>
		</div>
		<a class="btn btn-success" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-page="@ViewBag.CurrentPage">Quay về danh sách đơn hàng</a>
	</div>

	<div class="card-body">
		<div class="table-responsive">
			<table class="table" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr class="bg-primary text-gray-300">
						<th class="align-middle">STT</th>
						<th class="align-middle">Sản phẩm</th>
						<th class="align-middle">Giá</th>
						<th class="align-middle">Số lượng</th>
						<th class="align-middle">Tổng</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.OrderDetail)
					{
						<tr>
							<th scope="row">@(index++)</th>
							<td>@item.Product.Name</td>
							<td>@FormatCurrency.ToVnCurrency(@item.Price)</td>
							<td>@item.Quantity</td>
							<td>@FormatCurrency.ToVnCurrency(item.Quantity * item.Price)</td>
						</tr>
					}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4" class="text-end align-middle" style="text-align: right">
							<p><strong>Tổng tiền sản phẩm :</strong></p>
							<p><strong>Phí vận chuyển :</strong></p>
							<p class="text-primary"><strong>Tổng đơn hàng :</strong></p>
							<p class="text-danger"><strong>Mã giảm giá @couponCode :</strong></p>
							<p class="text-success"><strong>Tổng thanh toán :</strong></p>
						</td>
						<td class="align-middle">
							<p><strong>@FormatCurrency.ToVnCurrency(Model.TotalProductPrice)</strong></p>
							<p><strong>@FormatCurrency.ToVnCurrency(Model.ShippingFee)</strong></p>
							<p class="text-primary"><strong>@FormatCurrency.ToVnCurrency(Model.GrandTotal)</strong></p>
							<p class="text-danger"><strong>- @Model.DiscountValue</strong></p>
							<p class="text-success"><strong>@FormatCurrency.ToVnCurrency(Model.TotalPayment)</strong></p>
						</td>
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</div>
@section Scripts {
	<script>
		let table;
		$(document).ready(function () {
			table = setupDataTable({
				enableExport: true,
				exportColumns: [0, 1, 2, 3, 4],
				buttonsToShow: ['pdf', 'print']
			});
		});
	</script>
	<style>
		#dataTable thead th {
			border-bottom: none !important;
		}
	</style>
}