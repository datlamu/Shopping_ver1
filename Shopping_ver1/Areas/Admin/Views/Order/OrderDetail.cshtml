@model IEnumerable<OrderDetailModel>
@{
	var index = 1;
}
<h3>Chi tiết đơn hàng</h3>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">OrderCode</th>
			<th scope="col">UserName</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@(index++)</th>
				<td>@item.OrderCode</td>
				<td>@item.UserName</td>
			</tr>
		}
	</tbody>
</table>


