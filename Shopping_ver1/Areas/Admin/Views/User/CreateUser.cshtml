@model RegisterViewModel
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-4">
				<div class="signup-form">
					<!--sign up form-->
					<h2>New User Signup!</h2>
					<form asp-controller="User" asp-action="CreateUser" method="post">
						@Html.AntiForgeryToken()
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>PhoneNumber</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Role</label>
							<select asp-for="RoleId" class="form-control" asp-items="@Model.Roles">
							</select>
							<span asp-validation-for="RoleId" class="text-danger" />
						</div>
						<button class="btn btn-default">Đăng ký</button>
						<a asp-controller="User" asp-action="Index">Quay lại danh sách người dùng</a>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}