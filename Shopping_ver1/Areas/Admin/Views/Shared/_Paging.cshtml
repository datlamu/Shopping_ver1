@model Shopping_ver1.Helpers.Paginate
<div class="container">
	@if (Model.TotalPages > 0) // Tổng trang lớn hơn 0
	{
		<ul class="pagination justify-content-end">
			@if (Model.CurrentPage > 1) // trang hiện tại lớn 1
			{   // Nút trang đầu
				<li class="page-item">
					<a class="page-link page-ajax" href="#" data-page="1">First</a>
				</li>
				// Nút lùi lại 1 trang
				<li class="page-item">
					<a class="page-link page-ajax" href="#" data-page="@(Model.CurrentPage - 1)">Previous</a>
				</li>
			}
			@for (var pg = Model.StartPage; pg <= Model.EndPage; pg++) // Danh sách các trang
			{
				<li class="page-item @(pg==Model.CurrentPage ? "active" : "")">
					<a class="page-link page-ajax" href="#" data-page="@pg">@pg</a>
				</li>
			}
			@if (Model.CurrentPage < Model.TotalPages) // Trang cuối nhỏ hơn tổng trang
			{
				// Nút trang kết tiếp
				<li class="page-item">
					<a class="page-link page-ajax" href="#" data-page="@(Model.CurrentPage + 1)">Next</a>
				</li>
				// Nút trang cuối
				<li class="page-item">
					<a class="page-link page-ajax" href="#" data-page="@(Model.TotalPages)">Last</a>
				</li>
			}
		</ul>
	}
</div>

