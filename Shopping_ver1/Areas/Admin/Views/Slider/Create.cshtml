@model SliderModel
@{
	ViewData["title"] = "Tạo Slider";
}
<h3>Tạo Slider mới</h3>
<form asp-area="Admin" asp-controller="Slider" asp-action="Create" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label>Tên</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger" />
	</div>
	<div class="form-group">
		<label>Mô tả</label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger" />
	</div>
	<div class="form-group">
		<label>Trạng thái</label>
		<select asp-for="Status" class="form-control">
			<option value="1">Hiển thị</option>
			<option value="0">Ẩn</option>
		</select>
		<span asp-validation-for="Status" class="text-danger" />
	</div>
	<div class="form-group">
		<label>Ảnh</label>
		<input asp-for="ImageUpload" type="file" class="form-control" onchange="previewImage(this)" />
		<span class="text-danger">
			@Html.ValidationMessage("ImageUpload", null, new { @class = "text-danger" })
		</span>
		<br />
		<img id="preview-img" src="~/media/sliders/@(string.IsNullOrEmpty(Model?.Image) ? "default.png" : Model.Image)" alt="Ảnh sản phẩm" width="120" />
		<input type="hidden" asp-for="Image" />
	</div>
	<div class="form-group">
		<button class="btn btn-success">Tạo mới</button>
	</div>
</form>
<a asp-area="Admin" asp-controller="Slider" asp-action="Index" class="btn btn-success">Quay lại danh sách</a>

@* RenderPartial *@
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	@* Hiển thị ảnh khi chọn file *@
	<script src="~/backend/js/site.js"></script>
}