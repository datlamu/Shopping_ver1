@model RatingModel
<p><b>Viết đánh giá tại đây</b></p>
<form asp-controller="Product" asp-action="ProductReview" method="post">
	<input asp-for="ProductId" type="hidden" />

	<span>
		<input asp-for="Name" type="text" placeholder="Tên" />
		<span asp-validation-for="Name" class="text-danger"></span>

		<input asp-for="Email" type="email" placeholder="Email" style="margin-right:0" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</span>

	<textarea asp-for="Comment" placeholder="Đánh giá"></textarea>
	<span asp-validation-for="Comment" class="text-danger"></span>

	<div class="starContainer">
		Đánh giá:
		@for (int i = 1; i <= 5; i++)
		{
			<i class="fa fa-star checked" data-value="@i"></i>
		}
		<input asp-for="Star" type="hidden" class="ratingInput" value="5" />
	</div>

	<button type="submit" class="btn btn-default pull-right">Gửi</button>
</form>
