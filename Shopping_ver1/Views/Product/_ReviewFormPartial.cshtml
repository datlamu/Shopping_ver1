@model RatingModel

<form asp-controller="Product" asp-action="ProductReview" method="post">
	<input asp-for="ProductId" type="hidden" />

	<span>
		<input asp-for="Name" class="form-control" placeholder="Your Name" />
		<span asp-validation-for="Name" class="text-danger"></span>

		<input asp-for="Email" class="form-control" placeholder="Email Address" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</span>

	<textarea asp-for="Comment" class="form-control" placeholder="Your Review"></textarea>
	<span asp-validation-for="Comment" class="text-danger"></span>

	<div class="starContainer">
		Rating:
		@for (int i = 1; i <= 5; i++)
		{
			<span class="fa fa-star checked" data-value="@i"></span>
		}
		<input asp-for="Star" type="hidden" class="ratingInput" value="5" />
	</div>

	<button type="submit" class="btn btn-default pull-right">Submit</button>
</form>
