@model NewPasswordViewModel
@{
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
	ViewData["Title"] = "Đặt lại mật khẩu";
}

<!-- Outer Row -->
<div class="row justify-content-center">
	<div class="col-xl-10 col-lg-12 col-md-9">
		<div class="card o-hidden border-0 shadow-lg my-5">
			<div class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-6 d-none d-lg-block bg-password-image">
						<img src="~/media/logos/forgetPassword.jpg" class="w-100 h-100" style="object-fit: cover;" />
					</div>
					<div class="col-lg-6 ">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
								<p class="mb-4">
									Hãy nhập email bên dưới và sau đó làm theo hướng dẫn để đặt lại mật khẩu.
								</p>
							</div>
							<form asp-controller="Account" asp-action="NewPassword" method="post" class="user">
								@Html.AntiForgeryToken()
								<div asp-validation-summary="All" class="text-danger"></div>
								<input type="hidden" asp-for="Email" />
								<input type="hidden" asp-for="Token" />
								<div class="form-group">
									<input type="password" class="form-control form-control-user"
										   asp-for="Password" placeholder="Nhập mật khẩu mới tại đây...">
								</div>
								<div class="form-group">
									<input type="password" class="form-control form-control-user"
										   asp-for="RePassword" placeholder="Nhập lại mật khẩu mới...">
								</div>
								<button class="btn btn-primary btn-user btn-block btn-forgot-password">
									Gửi
								</button>
							</form>
							<hr>
							<div class="text-center">
								<a asp-controller="Account" asp-action="Login" class="small">Đăng nhập!</a>
							</div>
							<div class="text-center">
								<a asp-controller="Account" asp-action="Register" class="small">Tạo tài khoản mới!</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}