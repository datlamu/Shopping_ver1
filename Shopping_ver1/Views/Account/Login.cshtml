@model LoginViewModel
@{
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
	ViewData["Title"] = "Đăng nhập";
}

<!-- Outer Row -->
<div class="row justify-content-center">

	<div class="col-xl-10 col-lg-12 col-md-9">

		<div class="card o-hidden border-0 shadow-lg my-5">
			<div class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-6 d-none d-lg-block p-0">
						<img src="~/media/logos/viewAccount.jpg" class="w-100 h-100" style="object-fit: cover;" />
					</div>
					<div class="col-lg-6">
						<div class="p-5">
							<div class="text-center">
								<h4 class="text-gray-900 mb-4">Chào mừng quý khách!</h4>
							</div>
							<form asp-controller="Account" asp-action="Login" method="post" class="user">
								@Html.AntiForgeryToken()
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>

								<div class="form-group">
									<input asp-for="Email" type="email" class="form-control form-control-user"
										   aria-describedby="emailHelp"
										   placeholder="Email">
									<span asp-validation-for="Email" class="text-danger" />
								</div>
								<div class="form-group">
									<input asp-for="Password" type="password" class="form-control form-control-user"
										   placeholder="Mật khẩu">
									<span asp-validation-for="Password" class="text-danger" />
								</div>
								<div class="form-group">
									<div class="custom-control custom-checkbox small">
										<input type="checkbox" class="custom-control-input" id="customCheck">
										<label class="custom-control-label" for="customCheck">
											Ghi nhớ
										</label>
									</div>
								</div>
								<button class="btn btn-primary btn-user btn-block">Đăng nhập</button>
								<hr>
								<a asp-controller="Account" asp-action="LoginByGoogle" class="btn btn-google btn-user btn-block">
									<i class="fab fa-google fa-fw"></i> Đăng nhập với Google
								</a>
							</form>
							<hr>
							<div class="text-center">
								<a asp-controller="Account" asp-action="ForgotPassword" class="small">Quên mật khẩu?</a>
							</div>
							<div class="text-center">
								<a asp-controller="Account" asp-action="Register" class="small">Tạo tài khoản mới!</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}