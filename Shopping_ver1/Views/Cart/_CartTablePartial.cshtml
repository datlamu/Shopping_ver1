@using Shopping_ver1.Models.ViewModels
@model CartItemViewModel
<section id="cart_items">
	<div class="container">
		<div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li class="active">Shopping Cart</li>
			</ol>
		</div>
		<div class="table-responsive cart_info">
			<table class="table table-condensed" style="margin-bottom: 0;">
				<thead>
					<tr class="cart_menu">
						<td class="description">Tên</td>
						<td class="image">Ảnh</td>
						<td class="price">Giá</td>
						<td class="quantity">Số lượng</td>
						<td class="total">Thành tiền</td>
						<td>Tùy chọn</td>
					</tr>
				</thead>
				<tbody>
					@if (Model.CartItems.Count > 0)
					{
						foreach (var item in Model.CartItems)
						{
							<tr>
								<td class="cart_description">
									<h4>@item.ProductName</h4>
								</td>
								<td class="cart_product">
									<a href=""><img src="~/media/products/@item.Image" width="200px" alt=""></a>
								</td>
								<td class="cart_price">
									<p>@FormatCurrency.ToVnCurrency(item.Price)</p>
								</td>
								<td class="">
									<button class="btn btn-success btn-sm decrease-cartitem" value="@item.ProductId">
										<i class="fa fa-minus"></i>
									</button>
									<input class="cart_quantity_input mx-1 text-center" type="text" name="quantity" value="@item.Quantity" autocomplete="off" size="2">
									<button class="btn btn-primary btn-sm increase-cartitem" value="@item.ProductId">
										<i class="fa fa-plus"></i>
									</button>
								</td>
								<td class="cart_total">
									<p class="cart_total_price">@FormatCurrency.ToVnCurrency(@item.Total)</p>
								</td>
								<td class="cart_delete">
									<button class="btn btn-danger btn-sm remove-cartitem" value="@item.ProductId"><i class="fa fa-times"></i></button>
								</td>
							</tr>
						}
						<tr>
							<td class="cart_total" colspan="6" align="right">
								<p class="cart_total_price">Tổng đơn hàng: @FormatCurrency.ToVnCurrency(Model.GrandTotal)</p>
							</td>
						</tr>
						<tr>
							<td colspan="6" align="right">
								<button class="btn btn-danger btn-sm clear-cart">Giỏ hàng mới</button>
								@if (User.Identity?.IsAuthenticated ?? false)
								{
									<a class="btn btn-primary btn-sm" asp-controller="Checkout" asp-action="Index">Thanh toán</a>
								}
							</td>
						</tr>
					}
					else
					{
						<tr>
							<td class="cart_total">
								<p class="cart_total_price"><h4>Không có sản phẩm nào trong giỏ hàng</h4></p>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</section> <!--/#cart_items-->